%fieldset
%legend You need to log in, buddy.
%form{:action => '/sso/login', :method => 'POST'}
  %label{:for => 'username'}
    Username:
    %input{:type => 'text', :name => 'username'}
    %br
  %label{:for => 'password'}
    Password:
    %input{:type => 'password', :name => 'password'}
    %br
  %input{:type => 'submit', :value => 'Login'}
  or
  %a{:href => '/sso/signup'} Signup